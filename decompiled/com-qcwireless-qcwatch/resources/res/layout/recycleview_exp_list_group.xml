<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/qc_dp_6">
    <TextView
        android:textSize="@dimen/qc_dp_18"
        android:textColor="@color/exp_list_group"
        android:id="@+id/tv_item_group_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qc_dp_15"
        android:drawablePadding="@dimen/qc_dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/image_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qc_dp_10"
        android:src="@mipmap/icon_next"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_group_title"
        app:layout_constraintLeft_toRightOf="@+id/tv_item_group_title"
        app:layout_constraintTop_toTopOf="@+id/tv_item_group_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>
