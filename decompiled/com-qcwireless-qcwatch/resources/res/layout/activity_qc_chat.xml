<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chat_layout"
    android:background="@color/color_F9F9F9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/title_bar"
        layout="@layout/layout_title_bar"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/line_1"
        app:layout_constraintTop_toBottomOf="@+id/title_bar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">
            <com.stfalcon.chatkit.messages.MessagesList
                android:id="@+id/messagesList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:incomingQuestionTextColor="@color/ring_cs_1"
                app:incomingTextColor="@color/mine_common_1"
                app:incomingTextSize="@dimen/qc_sp_20"
                app:outcomingTextSize="@dimen/qc_sp_20"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/line_1"
        android:background="@color/mine_common_2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_above="@+id/input"
        app:layout_constraintBottom_toTopOf="@+id/input"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/qc_dp_10"
        app:layout_constraintBottom_toTopOf="@+id/csv_picture">
        <EditText
            android:textColor="@color/mine_common_1"
            android:textColorHint="@color/mine_common_1"
            android:id="@+id/messageInput"
            android:background="@drawable/bg_rect_ffffff_corner_12"
            android:paddingTop="@dimen/qc_dp_10"
            android:paddingBottom="@dimen/qc_dp_10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:inputType="textMultiLine"
            android:layout_marginStart="@dimen/qc_dp_10"
            android:layout_marginEnd="@dimen/qc_dp_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/image_add_1"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/image_add_1"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/qc_dp_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/image_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/chat_image_add"
            android:layout_marginEnd="@dimen/qc_dp_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/image_send"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/chat_iimage_send"
            android:layout_marginEnd="@dimen/qc_dp_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/csv_picture"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/qc_dp_20"
        android:minHeight="@dimen/qc_dp_60"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/image_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qc_dp_10"
            android:layout_marginBottom="@dimen/qc_dp_20"
            android:src="@mipmap/chat_album"
            android:layout_marginStart="@dimen/qc_dp_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/image_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qc_dp_10"
            android:layout_marginBottom="@dimen/qc_dp_20"
            android:src="@mipmap/chat_camera"
            android:layout_marginStart="@dimen/qc_dp_20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/image_album"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
