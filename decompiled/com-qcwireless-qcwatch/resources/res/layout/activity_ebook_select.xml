<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/titleBar"
        layout="@layout/layout_title_bar"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/music_layout"
        android:background="@color/color_F9F9F9"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/cs_4"
        app:layout_constraintTop_toBottomOf="@+id/titleBar">
        <RelativeLayout
            android:padding="@dimen/qc_dp_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="horizontal"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:textSize="14sp"
                    android:textColor="@color/device_setting_common_1"
                    android:textColorHint="@color/device_setting_common_1"
                    android:id="@+id/edt_search"
                    android:background="@drawable/search_bg_stroke_shape"
                    android:paddingLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/qc_dp_20"
                    android:layout_marginRight="@dimen/qc_dp_20"
                    android:hint="@string/qc_text_462"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:maxLength="18"
                    android:drawableLeft="@mipmap/ic_search"
                    android:drawablePadding="12dp"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:imeOptions="actionSearch"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/delete_text"
                    android:padding="@dimen/qc_dp_12"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/qc_dp_20"
                    android:src="@mipmap/contact_delete"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </RelativeLayout>
        <FrameLayout
            android:background="@color/color_F9F9F9"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:overScrollMode="never"/>
            <com.qcwireless.qcwatch.ui.device.contact.widget.SideBarLayout
                android:id="@+id/sidebar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:sidebarSelectTextColor="@color/color_FF6A00"
                app:sidebarSelectTextSize="12sp"
                app:sidebarUnSelectTextColor="@color/device_setting_common_1"
                app:sidebarUnSelectTextSize="10sp"
                app:sidebarWordBackground="@drawable/sort_text_bg"
                app:sidebarWordTextColor="@color/color_FF6A00"
                app:sidebarWordTextSize="45sp"/>
        </FrameLayout>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cs_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/qc_dp_80"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:gravity="center"
            android:id="@+id/tv_add_my_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qc_dp_40"
            android:text="@string/qc_text_551"
            android:drawableTop="@mipmap/music_add"
            android:drawablePadding="@dimen/qc_dp_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:gravity="center"
            android:id="@+id/tv_book_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/qc_dp_40"
            android:text="@string/qc_text_537"
            android:drawableTop="@mipmap/music_delete"
            android:drawablePadding="@dimen/qc_dp_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
