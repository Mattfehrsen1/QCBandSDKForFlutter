<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/qc_dp_10">
    <ImageView
        android:id="@+id/image_bg"
        android:background="@drawable/bg_rect_corner_20_watchface"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_watch_face"
        app:layout_constraintLeft_toLeftOf="@+id/image_watch_face"
        app:layout_constraintRight_toRightOf="@+id/image_watch_face"
        app:layout_constraintTop_toTopOf="@+id/image_watch_face"/>
    <ImageView
        android:id="@+id/image_watch_face"
        android:padding="8dp"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:minHeight="110dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/qc_sp_14"
        android:textColor="@color/watch_face_common_1"
        android:gravity="center"
        android:id="@+id/tv_desc"
        android:paddingLeft="@dimen/qc_dp_5"
        android:paddingRight="@dimen/qc_dp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qc_dp_10"
        android:minWidth="@dimen/qc_dp_50"
        android:minHeight="@dimen/qc_dp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_watch_face"/>
    <TextView
        android:textSize="@dimen/qc_sp_12"
        android:textColor="@color/watch_face_common_2"
        android:gravity="center"
        android:id="@+id/tv_price"
        android:paddingLeft="@dimen/qc_dp_5"
        android:paddingRight="@dimen/qc_dp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qc_dp_10"
        android:minWidth="@dimen/qc_dp_50"
        android:minHeight="@dimen/qc_dp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc"/>
</androidx.constraintlayout.widget.ConstraintLayout>
