<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/healthy_top_1"
        android:background="@drawable/bg_gradient_270"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qc_dp_48"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/ivNavigateBefore"
            android:padding="@dimen/qc_sp_14"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="@dimen/qc_dp_60"
            android:layout_height="@dimen/qc_dp_60"
            android:src="@drawable/ic_navigate_before_black_44dp"/>
        <TextView
            android:textSize="@dimen/qc_sp_22"
            android:textColor="@color/title_bar_center"
            android:ellipsize="marquee"
            android:gravity="center"
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/qc_dp_200"
            android:singleLine="true"
            android:layout_centerInParent="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"/>
        <ImageView
            android:id="@+id/image_share"
            android:padding="@dimen/qc_dp_10"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/qc_dp_10"
            android:src="@mipmap/app_share"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/qc_dp_12"
            android:layout_alignParentEnd="true"/>
        <View
            android:id="@+id/divider"
            android:background="@color/title_bar_line"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/nestScrollView"
        android:background="@drawable/bg_ai_content_shape"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/qc_dp_12"
        android:paddingStart="@dimen/qc_dp_12"
        android:paddingEnd="@dimen/qc_dp_12"
        android:layout_marginStart="@dimen/qc_dp_12"
        android:layout_marginEnd="@dimen/qc_dp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleBar">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/ai_text"
                android:id="@+id/tv_time_notification"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qc_dp_20"
                android:text="@string/qc_ai_time_offset"
                android:drawableLeft="@mipmap/ic_ai_time_notification"
                android:drawablePadding="@dimen/qc_dp_10"
                android:layout_marginStart="@dimen/qc_dp_12"
                android:layout_marginEnd="@dimen/qc_dp_12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                android:id="@+id/iv_ai_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qc_dp_16"
                android:src="@mipmap/ic_ai_loading"
                android:contentDescription="@string/app_name"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_time_notification"/>
            <TextView
                android:textSize="@dimen/qc_sp_22"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/tv_anal_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/qc_dp_26"
                android:text="@string/qc_ai_text_2"
                app:layout_constraintBottom_toBottomOf="@+id/iv_ai_bg"
                app:layout_constraintLeft_toLeftOf="@+id/iv_ai_bg"
                app:layout_constraintRight_toRightOf="@+id/iv_ai_bg"
                app:layout_constraintTop_toTopOf="@+id/iv_ai_bg"/>
            <TextView
                android:textSize="@dimen/qc_sp_22"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qc_dp_6"
                app:layout_constraintLeft_toLeftOf="@+id/tv_anal_title"
                app:layout_constraintRight_toRightOf="@+id/tv_anal_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_anal_title"/>
            <TextView
                android:textSize="@dimen/qc_sp_14"
                android:textColor="@color/white"
                android:id="@+id/tv_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qc_dp_6"
                android:text="@string/qc_text_221"
                app:layout_constraintLeft_toLeftOf="@+id/tv_anal_title"
                app:layout_constraintRight_toRightOf="@+id/tv_anal_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_anal_title"/>
            <TextView
                android:textSize="@dimen/qc_sp_16"
                android:textColor="@color/ai_text"
                android:id="@+id/tv_date"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qc_dp_16"
                android:drawableLeft="@mipmap/ic_ai_date"
                android:drawablePadding="@dimen/qc_dp_6"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_ai_bg"/>
            <TextView
                android:textSize="@dimen/qc_sp_18"
                android:textStyle="bold"
                android:textColor="@color/ai_text"
                android:id="@+id/tv_result_title"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qc_dp_16"
                android:text="@string/qc_ai_text_5"
                android:drawableLeft="@mipmap/ic_ai_result"
                android:drawablePadding="@dimen/qc_dp_6"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_date"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_result_title"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/recyclerView"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
