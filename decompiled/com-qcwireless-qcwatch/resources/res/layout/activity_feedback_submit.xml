<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/title_bar"
        layout="@layout/layout_title_bar"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/qc_dp_26"
        android:layout_marginRight="@dimen/qc_dp_26"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_bar">
        <TextView
            android:textSize="@dimen/qc_sp_16"
            android:textColor="@color/feedback_type_title"
            android:gravity="center"
            android:id="@+id/tv_feedback_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/qc_dp_10"
            android:minHeight="@dimen/qc_dp_42"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/line_1"
            android:background="@color/feedback_line_1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_feedback_name"/>
        <EditText
            android:theme="@style/MyEditText"
            android:textColor="@color/feedback_et_text"
            android:textColorHint="@color/login_edit_hint"
            android:gravity="top"
            android:id="@+id/user_feedback_et"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/qc_dp_150"
            android:hint="@string/qc_text_323"
            android:cursorVisible="true"
            android:inputType="textMultiLine"
            android:textCursorDrawable="@drawable/edit_view_cursor"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line_1"/>
        <TextView
            android:textColor="@color/feedback_common_1"
            android:id="@+id/tv_max_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/200"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_feedback_et"/>
        <View
            android:id="@+id/line_2"
            android:background="@color/feedback_line_1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/qc_dp_2"
            app:layout_constraintTop_toBottomOf="@+id/tv_max_length"/>
        <TextView
            android:textSize="@dimen/qc_sp_14"
            android:textColor="@color/feedback_common_1"
            android:gravity="center"
            android:id="@+id/tv_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qc_dp_10"
            android:minHeight="@dimen/qc_dp_40"
            android:text="@string/qc_text_324"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line_2"/>
        <EditText
            android:theme="@style/MyEditText"
            android:textColor="@color/feedback_et_text"
            android:textColorHint="@color/login_edit_hint"
            android:id="@+id/et_contact_email"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qc_dp_10"
            android:minHeight="@dimen/qc_dp_40"
            android:hint="@string/qc_text_325"
            android:cursorVisible="true"
            android:inputType="textMultiLine"
            android:textCursorDrawable="@drawable/edit_view_cursor"
            app:layout_constraintLeft_toRightOf="@+id/tv_contact"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line_2"/>
        <View
            android:id="@+id/line_3"
            android:background="@color/feedback_line_1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/qc_dp_10"
            app:layout_constraintTop_toBottomOf="@+id/et_contact_email"/>
        <TextView
            android:textSize="@dimen/qc_sp_14"
            android:textColor="@color/feedback_common_1"
            android:id="@+id/tv_image_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qc_dp_10"
            android:text="0/3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line_3"/>
        <TextView
            android:textSize="@dimen/qc_sp_14"
            android:textColor="@color/feedback_common_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qc_dp_10"
            android:maxWidth="@dimen/qc_dp_300"
            android:text="@string/qc_text_326"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line_3"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_feedback_pic"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qc_dp_20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_image_number"/>
        <ImageView
            android:id="@+id/add_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="@dimen/qc_dp_20"
            android:src="@mipmap/feedback_add_pic"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rcv_feedback_pic"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
