<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/qc_dp_48">
    <TextView
        android:textSize="@dimen/qc_sp_18"
        android:textColor="@color/device_setting_common_1"
        android:gravity="left"
        android:id="@+id/rcv_device_name"
        android:paddingRight="@dimen/qc_dp_26"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/rcv_device_address"
        app:layout_constraintLeft_toRightOf="@+id/image_select"
        app:layout_constraintRight_toLeftOf="@+id/tv_lyrics"/>
    <TextView
        android:textSize="@dimen/qc_sp_8"
        android:textColor="@color/device_setting_common_2"
        android:id="@+id/rcv_device_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/item_line"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <View
        android:id="@+id/item_line"
        android:background="@color/device_line"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/rcv_device_name"/>
    <ImageView
        android:id="@+id/image_select"
        android:padding="@dimen/qc_dp_5"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@mipmap/music_select"
        app:layout_constraintBottom_toBottomOf="@+id/rcv_device_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rcv_device_name"/>
    <TextView
        android:textColor="@color/color_FF6A00"
        android:gravity="center"
        android:id="@+id/tv_lyrics"
        android:padding="@dimen/qc_dp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/qc_text_590"
        app:layout_constraintBottom_toBottomOf="@+id/rcv_device_name"
        app:layout_constraintRight_toLeftOf="@+id/image_show_pop"
        app:layout_constraintTop_toTopOf="@+id/rcv_device_name"/>
    <ImageView
        android:id="@+id/image_show_pop"
        android:padding="@dimen/qc_dp_10"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/qc_dp_10"
        android:src="@mipmap/music_manager_icon"
        app:layout_constraintBottom_toBottomOf="@+id/rcv_device_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rcv_device_name"/>
</androidx.constraintlayout.widget.ConstraintLayout>
