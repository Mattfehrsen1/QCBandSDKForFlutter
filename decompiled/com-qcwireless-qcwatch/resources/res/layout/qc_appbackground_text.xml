<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_F9F9F9"
    android:padding="@dimen/qc_dp_5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="18sp"
        android:textColor="@color/app_bg_run_common_1"
        android:ellipsize="marquee"
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/qc_dp_250"
        android:text="title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="12sp"
        android:textColor="@color/app_bg_run_common_2"
        android:ellipsize="marquee"
        android:id="@+id/app_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/qc_dp_220"
        android:text=""
        app:layout_constraintLeft_toLeftOf="@+id/app_title"
        app:layout_constraintTop_toBottomOf="@+id/app_title"/>
    <TextView
        android:textColor="@color/app_bg_run_common_1"
        android:id="@+id/btn_app_setting"
        android:paddingLeft="@dimen/qc_dp_16"
        android:paddingTop="@dimen/qc_dp_5"
        android:paddingRight="@dimen/qc_dp_16"
        android:paddingBottom="@dimen/qc_dp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/qc_dp_5"
        android:text="@string/qc_text_248"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
