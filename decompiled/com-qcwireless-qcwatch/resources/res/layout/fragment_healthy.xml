<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/healthy_module_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/sync_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.qcwireless.qcwatch.ui.base.view.pullrefresh.ClassicsHeader
            android:id="@+id/class_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/healthy_top_1"
                android:background="@drawable/bg_gradient_270"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                app:layout_constraintTop_toTopOf="parent"/>
            <View
                android:id="@+id/healthy_bottom_1"
                android:background="@color/color_F9F9F9"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/healthy_top_1"/>
            <com.qcwireless.qcwatch.ui.base.view.MyRecycleView
                android:id="@+id/healthy_card_rcv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/qc_sp_20"
                android:layout_marginRight="@dimen/qc_sp_20"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
