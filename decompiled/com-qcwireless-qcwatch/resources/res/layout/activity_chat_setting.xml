<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="@color/color_F9F9F9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/title_bar"
        layout="@layout/layout_title_bar"/>
    <LinearLayout
        android:id="@+id/ll_1"
        android:background="@drawable/bg_rect_ffffff_corner_12"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qc_dp_10"
        android:layout_marginStart="@dimen/qc_dp_16"
        android:layout_marginEnd="@dimen/qc_dp_16"
        app:layout_constraintTop_toBottomOf="@+id/title_bar">
        <com.qcwireless.qcwatch.ui.base.view.QSettingItemWithClickSystem
            android:id="@+id/qc_message_disturb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/qc_dp_54"
            android:layout_marginEnd="@dimen/qc_dp_16"
            app:LtextColor="@color/heart_common_1"
            app:isShowSubTitle="false"
            app:leftText="@string/ring_text_mine_119"
            app:rightStyle="iconSwitch"
            app:rightText=""/>
    </LinearLayout>
    <Button
        android:textColor="@color/mine_common_1"
        android:id="@+id/btn_confirm"
        android:background="@drawable/bg_rect_ffffff_corner_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qc_dp_16"
        android:minHeight="@dimen/qc_dp_54"
        android:text="@string/ring_text_mine_120"
        android:layout_marginStart="@dimen/qc_dp_16"
        android:layout_marginEnd="@dimen/qc_dp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_1"
        app:textAllCaps="false"/>
</androidx.constraintlayout.widget.ConstraintLayout>
