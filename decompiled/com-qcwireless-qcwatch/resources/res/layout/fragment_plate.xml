<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_F9F9F9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <HorizontalScrollView
        android:id="@+id/v_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_line_1"
                android:background="@drawable/bg_rect_corner_25"
                android:paddingBottom="@dimen/qc_dp_20"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_marginBottom="3dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_tab1_title"
                app:layout_constraintLeft_toLeftOf="@+id/tv_tab1_title"
                app:layout_constraintRight_toRightOf="@+id/tv_tab1_title"/>
            <TextView
                android:textSize="@dimen/qc_sp_22"
                android:textColor="@color/sel_watch_face_color"
                android:ellipsize="marquee"
                android:gravity="bottom"
                android:id="@+id/tv_tab1_title_1"
                android:padding="@dimen/qc_dp_5"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qc_dp_10"
                android:layout_marginTop="@dimen/qc_dp_10"
                android:maxWidth="@dimen/qc_dp_200"
                android:minHeight="@dimen/qc_dp_36"
                android:text="@string/qc_text_165"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="@dimen/qc_sp_16"
                android:textColor="@color/sel_watch_face_color"
                android:ellipsize="marquee"
                android:gravity="bottom"
                android:id="@+id/tv_tab1_title"
                android:padding="@dimen/qc_dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qc_dp_10"
                android:layout_marginTop="@dimen/qc_dp_10"
                android:maxWidth="@dimen/qc_dp_200"
                android:minHeight="@dimen/qc_dp_36"
                android:text="@string/qc_text_165"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                app:layout_constraintBottom_toBottomOf="@+id/tv_tab1_title_1"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:id="@+id/tv_line_2"
                android:background="@drawable/bg_rect_corner_25"
                android:paddingBottom="@dimen/qc_dp_20"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_marginBottom="3dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_tab2_title"
                app:layout_constraintLeft_toLeftOf="@+id/tv_tab2_title"
                app:layout_constraintRight_toRightOf="@+id/tv_tab2_title"/>
            <TextView
                android:textSize="@dimen/qc_sp_16"
                android:textColor="@color/sel_watch_face_color"
                android:ellipsize="marquee"
                android:gravity="bottom"
                android:id="@+id/tv_tab2_title"
                android:padding="@dimen/qc_dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qc_dp_5"
                android:layout_marginTop="@dimen/qc_dp_10"
                android:maxWidth="@dimen/qc_dp_160"
                android:minHeight="@dimen/qc_dp_36"
                android:text="@string/lewear_text_2"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                app:layout_constraintBottom_toBottomOf="@+id/tv_tab1_title_1"
                app:layout_constraintLeft_toRightOf="@+id/tv_tab1_title"/>
            <TextView
                android:textSize="@dimen/qc_sp_16"
                android:textColor="@color/sel_watch_face_color"
                android:ellipsize="marquee"
                android:gravity="bottom"
                android:id="@+id/tv_tab3_title"
                android:padding="@dimen/qc_dp_5"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qc_dp_5"
                android:layout_marginTop="@dimen/qc_dp_10"
                android:maxWidth="@dimen/qc_dp_160"
                android:minHeight="@dimen/qc_dp_36"
                android:text="@string/qc_text_669"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                app:layout_constraintBottom_toBottomOf="@+id/tv_tab2_title"
                app:layout_constraintLeft_toRightOf="@+id/tv_tab2_title"/>
            <TextView
                android:id="@+id/tv_line_4"
                android:background="@drawable/bg_rect_corner_25"
                android:paddingBottom="@dimen/qc_dp_20"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_marginBottom="3dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_tab4_title"
                app:layout_constraintLeft_toLeftOf="@+id/tv_tab4_title"
                app:layout_constraintRight_toRightOf="@+id/tv_tab4_title"/>
            <TextView
                android:textSize="@dimen/qc_sp_16"
                android:textColor="@color/sel_watch_face_color"
                android:ellipsize="marquee"
                android:gravity="bottom"
                android:id="@+id/tv_tab4_title"
                android:padding="@dimen/qc_dp_5"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qc_dp_5"
                android:layout_marginTop="@dimen/qc_dp_10"
                android:maxWidth="@dimen/qc_dp_160"
                android:minHeight="@dimen/qc_dp_36"
                android:text="@string/qc_text_166"
                android:singleLine="true"
                app:layout_constraintBottom_toBottomOf="@+id/tv_tab2_title"
                app:layout_constraintLeft_toRightOf="@+id/tv_tab3_title"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_scrollview"/>
</androidx.constraintlayout.widget.ConstraintLayout>
