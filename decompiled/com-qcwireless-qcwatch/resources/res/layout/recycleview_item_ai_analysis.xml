<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/qc_sp_16"
        android:textStyle="bold"
        android:textColor="@color/ai_text"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qc_dp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/qc_sp_16"
        android:textColor="@color/ai_text"
        android:id="@+id/tv_content_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qc_dp_8"
        android:text="@string/qc_ai_text_13"
        android:lineSpacingExtra="@dimen/qc_dp_2"
        app:layout_constraintLeft_toLeftOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"/>
    <TextView
        android:textSize="@dimen/qc_sp_16"
        android:textColor="@color/ai_text"
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qc_dp_6"
        android:lineSpacingExtra="@dimen/qc_dp_2"
        app:layout_constraintLeft_toLeftOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_content_title"/>
    <TextView
        android:textSize="@dimen/qc_sp_16"
        android:textColor="@color/ai_text"
        android:id="@+id/tv_suggestion_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qc_dp_8"
        android:text="@string/qc_ai_text_14"
        android:lineSpacingExtra="@dimen/qc_dp_2"
        app:layout_constraintLeft_toLeftOf="@+id/tv_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_content"/>
    <TextView
        android:textSize="@dimen/qc_sp_16"
        android:textColor="@color/ai_text"
        android:id="@+id/tv_suggestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qc_dp_6"
        android:lineSpacingExtra="@dimen/qc_dp_2"
        app:layout_constraintLeft_toLeftOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_suggestion_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>
