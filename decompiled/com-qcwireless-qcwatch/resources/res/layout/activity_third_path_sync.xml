<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_F9F9F9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/title_bar"
        layout="@layout/layout_title_bar"/>
    <TextView
        android:textColor="@color/color_FF6A00"
        android:gravity="center"
        android:id="@+id/btn_author"
        android:background="@drawable/sel_btn_google_sign_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qc_dp_26"
        android:layout_marginRight="@dimen/qc_dp_26"
        android:text="@string/qc_text_456"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_bar"/>
    <com.qcwireless.qcwatch.ui.base.view.QSettingItemWithClickSystem
        android:id="@+id/qc_google_fit_sync"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qc_dp_26"
        android:layout_marginRight="@dimen/qc_dp_26"
        android:minHeight="@dimen/qc_dp_54"
        app:LtextColor="@color/device_setting_common_1"
        app:isShowRightText="true"
        app:layout_constraintTop_toBottomOf="@+id/btn_author"
        app:leftIcon="@mipmap/google_fit"
        app:leftText="@string/qc_text_457"
        app:rightStyle="iconSwitch"
        app:rightText=""
        app:rightTextColor="@color/device_setting_common_2"/>
    <TextView
        android:textSize="@dimen/qc_sp_14"
        android:textColor="@color/device_setting_common_2"
        android:id="@+id/tv_google_fit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qc_dp_26"
        android:layout_marginTop="@dimen/qc_dp_5"
        android:layout_marginRight="@dimen/qc_dp_26"
        android:text="@string/qc_text_455"
        app:layout_constraintTop_toBottomOf="@+id/qc_google_fit_sync"/>
    <TextView
        android:textColor="@color/about_common_3"
        android:id="@+id/user_privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/qc_text_149"
        app:layout_constraintBottom_toTopOf="@+id/line_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <View
        android:id="@+id/line_1"
        android:background="@color/about_common_3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/qc_sp_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/user_privacy"
        app:layout_constraintRight_toRightOf="@+id/user_privacy"/>
</androidx.constraintlayout.widget.ConstraintLayout>
