<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/qc_dp_6">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/click_ctl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qc_dp_20"
        android:layout_marginRight="@dimen/qc_dp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textSize="@dimen/qc_sp_18"
            android:textStyle="bold"
            android:textColor="@color/watch_face_common_1"
            android:gravity="center"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qc_dp_5"
            android:maxWidth="@dimen/qc_dp_300"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="@dimen/qc_sp_14"
            android:textColor="@color/watch_face_common_3"
            android:id="@+id/tv_right_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/qc_text_20"
            android:drawableRight="@mipmap/dial_right"
            android:drawablePadding="@dimen/qc_dp_5"
            app:layout_constraintBottom_toBottomOf="@+id/tv_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_title"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qc_dp_15"
        android:layout_marginRight="@dimen/qc_dp_15"
        app:layout_constraintTop_toBottomOf="@+id/click_ctl"/>
</androidx.constraintlayout.widget.ConstraintLayout>
