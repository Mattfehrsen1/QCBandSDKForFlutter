<?xml version="1.0" encoding="utf-8"?>
<com.qcwireless.qcwatch.ui.base.view.recycleview.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/qc_dp_26"
    android:layout_marginRight="@dimen/qc_dp_26"
    android:minHeight="@dimen/qc_dp_60">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="@dimen/qc_dp_60">
        <TextView
            android:textSize="18sp"
            android:textColor="@color/edit_card_item_title"
            android:gravity="left"
            android:id="@+id/item_list_text_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxWidth="@dimen/qc_dp_250"
            android:minWidth="@dimen/qc_dp_200"
            android:layout_marginEnd="@dimen/qc_dp_36"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/item_list_menu_imageView"
            android:padding="@dimen/qc_dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/qc_image_1"
            app:layout_constraintBottom_toTopOf="@+id/line_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/line_1"
            android:background="@color/edit_card_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <Button
            android:textSize="14sp"
            android:textColor="#fff"
            android:id="@+id/btn_delete"
            android:background="#ff0000"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="@string/qc_text_356"
            app:textAllCaps="false"/>
    </LinearLayout>
</com.qcwireless.qcwatch.ui.base.view.recycleview.SwipeItemLayout>
