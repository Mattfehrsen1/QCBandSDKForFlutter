<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/qc_dp_26"
    android:layout_marginRight="@dimen/qc_dp_26"
    android:minHeight="@dimen/qc_dp_60">
    <ImageView
        android:id="@+id/image_select"
        android:paddingBottom="@dimen/qc_dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/qc_sp_16"
        android:textColor="@color/device_setting_common_1"
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qc_dp_10"
        android:layout_marginBottom="@dimen/qc_dp_10"
        android:maxWidth="@dimen/qc_dp_150"
        android:minWidth="@dimen/qc_dp_150"
        app:layout_constraintBottom_toTopOf="@+id/progress_style"
        app:layout_constraintLeft_toRightOf="@+id/image_select"/>
    <TextView
        android:textSize="@dimen/qc_sp_16"
        android:textColor="@color/device_setting_common_1"
        android:id="@+id/tv_progress_value"
        android:paddingRight="@dimen/qc_dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qc_dp_15"
        android:layout_marginBottom="@dimen/qc_dp_10"
        app:layout_constraintBottom_toTopOf="@+id/progress_style"
        app:layout_constraintLeft_toRightOf="@+id/tv_status"
        app:layout_constraintRight_toRightOf="parent"/>
    <ProgressBar
        android:id="@+id/progress_style"
        android:layout_width="0dp"
        android:layout_height="11dp"
        android:layout_marginLeft="@dimen/qc_dp_10"
        android:layout_marginRight="@dimen/qc_dp_10"
        android:progress="0"
        app:layout_constraintBottom_toBottomOf="@+id/image_result"
        app:layout_constraintLeft_toRightOf="@+id/image_select"
        app:layout_constraintRight_toLeftOf="@+id/image_result"
        style="@style/progress_style"/>
    <ImageView
        android:id="@+id/image_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
