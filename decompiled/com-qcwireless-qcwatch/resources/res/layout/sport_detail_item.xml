<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/image_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/qc_dp_5"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_item_title"/>
    <TextView
        android:textSize="@dimen/qc_sp_14"
        android:textColor="@color/sport_common_2"
        android:id="@+id/tv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qc_dp_5"
        android:layout_marginRight="@dimen/qc_dp_5"
        android:maxWidth="@dimen/qc_dp_120"
        android:layout_marginEnd="@dimen/qc_dp_5"
        app:layout_constraintLeft_toRightOf="@+id/image_item"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/qc_sp_24"
        android:textStyle="bold"
        android:textColor="@color/sport_common_1"
        android:id="@+id/tv_item_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qc_dp_5"
        android:layout_marginTop="@dimen/qc_dp_8"
        android:text="--"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_title"/>
    <TextView
        android:textSize="@dimen/qc_sp_14"
        android:textColor="@color/sport_common_2"
        android:gravity="bottom"
        android:id="@+id/tv_item_value_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qc_dp_5"
        android:layout_marginBottom="@dimen/qc_dp_2"
        android:maxWidth="@dimen/qc_dp_80"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_value"
        app:layout_constraintLeft_toRightOf="@+id/tv_item_value"/>
</androidx.constraintlayout.widget.ConstraintLayout>
