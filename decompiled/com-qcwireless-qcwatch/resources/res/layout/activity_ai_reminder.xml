<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/titleBar"
        layout="@layout/layout_title_bar"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/qc_dp_26"
        android:layout_marginRight="@dimen/qc_dp_26"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleBar">
        <TextView
            android:textSize="@dimen/qc_sp_12"
            android:textColor="@color/device_setting_common_2"
            android:id="@+id/tv_reminder_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qc_dp_10"
            android:text="@string/qc_text_49"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.qcwireless.qcwatch.ui.base.view.QSettingItem
            android:id="@+id/qc_long_sit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/qc_dp_54"
            app:LtextColor="@color/device_setting_common_1"
            app:isShowRightText="true"
            app:layout_constraintTop_toBottomOf="@+id/tv_reminder_title"
            app:leftIcon="@mipmap/device_long_sit"
            app:leftText="@string/qc_text_50"
            app:rightStyle="iconShow"
            app:rightText=""
            app:rightTextColor="@color/device_setting_common_2"/>
        <com.qcwireless.qcwatch.ui.base.view.QSettingItem
            android:id="@+id/qc_drink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/qc_dp_54"
            app:LtextColor="@color/device_setting_common_1"
            app:isShowRightText="true"
            app:layout_constraintTop_toBottomOf="@+id/qc_long_sit"
            app:leftIcon="@mipmap/device_drink"
            app:leftText="@string/qc_text_51"
            app:rightStyle="iconShow"
            app:rightText=""
            app:rightTextColor="@color/device_setting_common_2"/>
        <View
            android:id="@+id/dot_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/qc_drink"/>
        <TextView
            android:textSize="@dimen/qc_sp_12"
            android:textColor="@color/device_setting_common_2"
            android:id="@+id/sub_title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qc_dp_20"
            android:text="@string/qc_text_74"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dot_2"/>
        <ImageView
            android:id="@+id/add_alarm"
            android:padding="@dimen/qc_dp_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/add_alarm"
            app:layout_constraintBottom_toBottomOf="@+id/sub_title_1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/sub_title_1"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_alarm"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/qc_dp_15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sub_title_1"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
