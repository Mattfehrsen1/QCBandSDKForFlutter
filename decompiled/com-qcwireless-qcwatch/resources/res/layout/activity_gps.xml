<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_F9F9F9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:background="@drawable/bg_gradient_gps_270"
        android:layout_width="match_parent"
        android:layout_height="333dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <include
        android:id="@+id/title_bar"
        layout="@layout/layout_title_bar"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/qc_dp_20"
        android:layout_marginTop="@dimen/qc_dp_30"
        android:layout_marginRight="@dimen/qc_dp_20"
        android:layout_marginBottom="@dimen/qc_dp_80"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_bar">
        <fragment
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:textSize="@dimen/qc_sp_70"
            android:textStyle="bold"
            android:textColor="@color/gps_total_value"
            android:id="@+id/tv_total_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qc_dp_40"
            android:text="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textColor="@color/gps_total_value_unit"
            android:id="@+id/tv_gps_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qc_dp_8"
            android:layout_marginBottom="@dimen/qc_dp_18"
            android:text="@string/qc_text_88"
            app:layout_constraintBottom_toBottomOf="@+id/tv_total_distance"
            app:layout_constraintLeft_toRightOf="@+id/tv_total_distance"/>
        <TextView
            android:textColor="@color/gps_total_history"
            android:id="@+id/tv_sport_history"
            android:padding="@dimen/qc_dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/qc_text_274"
            android:drawablePadding="@dimen/qc_dp_10"
            app:drawableRightCompat="@mipmap/icon_next"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_total_distance"/>
        <ImageView
            android:id="@+id/btn_gps_go"
            android:padding="@dimen/qc_dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/qc_dp_50"
            android:src="@mipmap/gps_go"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/bg_rect_corner_12_fff"
            android:padding="@dimen/qc_dp_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qc_dp_20"
            android:layout_marginEnd="@dimen/qc_dp_20"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:textSize="@dimen/qc_sp_12"
                android:textColor="@color/gps_total_value_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qc_dp_8"
                android:text="GPS"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/image_signal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qc_dp_4"
                android:layout_marginRight="@dimen/qc_dp_8"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
