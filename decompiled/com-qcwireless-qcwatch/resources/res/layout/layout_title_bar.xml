<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:id="@+id/titleBar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qc_dp_48">
    <ImageView
        android:id="@+id/ivNavigateBefore"
        android:padding="14dp"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="@dimen/qc_dp_48"
        android:layout_height="@dimen/qc_dp_48"
        android:src="@drawable/ic_navigate_before_black_44dp"/>
    <TextView
        android:textSize="@dimen/qc_sp_16"
        android:textColor="@color/title_bar_center"
        android:ellipsize="marquee"
        android:gravity="center"
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/qc_dp_200"
        android:singleLine="true"
        android:layout_centerInParent="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"/>
    <TextView
        android:textSize="@dimen/qc_sp_22"
        android:textColor="@color/title_bar_right"
        android:id="@+id/tvRightText"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/qc_dp_100"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/qc_dp_15"
        android:layout_alignParentEnd="true"/>
    <ImageView
        android:id="@+id/tvRightImage"
        android:padding="@dimen/qc_dp_15"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/qc_dp_15"
        android:layout_alignParentEnd="true"/>
    <View
        android:id="@+id/divider"
        android:background="@color/title_bar_line"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
