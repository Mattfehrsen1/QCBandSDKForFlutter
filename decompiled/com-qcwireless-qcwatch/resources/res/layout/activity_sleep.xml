<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_F9F9F9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:background="@drawable/bg_gradient_sleep_270"
        android:layout_width="match_parent"
        android:layout_height="313dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <include
        android:id="@+id/title_bar"
        layout="@layout/layout_title_bar"/>
    <com.qcwireless.qcwatch.ui.base.view.QSwitchButtonView
        android:id="@+id/sleep_qsv_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qc_dp_36"
        android:layout_marginLeft="@dimen/qc_dp_26"
        android:layout_marginTop="@dimen/qc_dp_10"
        android:layout_marginRight="@dimen/qc_dp_26"
        app:layout_constraintTop_toBottomOf="@+id/title_bar"
        app:qwv_colorMain="@color/sleep_switch_on"
        app:qwv_colorSub="@color/color_FFFFFF"
        app:qwv_duration="200"
        app:qwv_paddingSide="-10dp"
        app:qwv_textColor="@color/sleep_common_2"
        app:qwv_textSize="@dimen/qc_sp_14"/>
    <FrameLayout
        android:id="@+id/sleepContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sleep_qsv_view"/>
</androidx.constraintlayout.widget.ConstraintLayout>
