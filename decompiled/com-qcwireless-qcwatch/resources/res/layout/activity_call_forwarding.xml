<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_F9F9F9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/titleBar"
        layout="@layout/layout_title_bar"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleBar">
        <com.qcwireless.qcwatch.ui.base.view.QSettingItemWithClickSystem
            android:id="@+id/qc_forward"
            android:paddingLeft="@dimen/qc_dp_15"
            android:paddingRight="@dimen/qc_dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qc_dp_5"
            android:minHeight="@dimen/qc_dp_54"
            app:LtextColor="@color/device_setting_common_1"
            app:isShowRightText="true"
            app:layout_constraintTop_toTopOf="parent"
            app:leftText="@string/qc_text_598"
            app:rightStyle="iconSwitch"
            app:rightText=""/>
        <View
            android:id="@+id/line_1"
            android:background="@color/device_setting_line_1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/qc_dp_5"
            android:layout_marginStart="@dimen/qc_dp_15"
            android:layout_marginEnd="@dimen/qc_dp_15"
            app:layout_constraintTop_toBottomOf="@+id/qc_forward"/>
        <com.qcwireless.qcwatch.ui.base.view.QSettingItemWithClickSystem
            android:id="@+id/qc_forward_to"
            android:paddingLeft="@dimen/qc_dp_15"
            android:paddingRight="@dimen/qc_dp_15"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qc_dp_5"
            android:minHeight="@dimen/qc_dp_54"
            app:LtextColor="@color/device_setting_common_1"
            app:isShowRightText="true"
            app:isShowSubTitle="true"
            app:layout_constraintTop_toBottomOf="@+id/line_1"
            app:leftText="@string/qc_text_600"
            app:rightStyle="iconShow"
            app:rightText=""/>
        <com.qcwireless.qcwatch.ui.base.view.QSettingItemWithClickSystem
            android:id="@+id/qc_forward_no_one_heard"
            android:paddingLeft="@dimen/qc_dp_15"
            android:paddingRight="@dimen/qc_dp_15"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qc_dp_5"
            android:minHeight="@dimen/qc_dp_54"
            app:LtextColor="@color/device_setting_common_1"
            app:isShowRightText="true"
            app:isShowSubTitle="true"
            app:layout_constraintTop_toBottomOf="@+id/qc_forward_to"
            app:leftText="@string/qc_text_602"
            app:rightStyle="iconShow"
            app:rightText=""/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:textSize="@dimen/qc_sp_14"
        android:textColor="@color/error_common_2"
        android:gravity="center"
        android:id="@+id/tv_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/qc_dp_10"
        android:text="@string/qc_text_623"
        app:layout_constraintBottom_toTopOf="@+id/tv_1"/>
    <TextView
        android:textSize="@dimen/qc_sp_14"
        android:textColor="@color/error_common_2"
        android:gravity="center"
        android:id="@+id/tv_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/qc_dp_20"
        android:text="@string/qc_text_622"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
