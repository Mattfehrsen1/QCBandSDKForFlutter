<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_skin_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/qc_dp_120"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/qc_sp_14"
        android:textColor="@color/rcv_skin_item"
        android:id="@+id/tv_skin_name"
        android:padding="@dimen/qc_dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/qc_dp_10"
        app:layout_constraintBottom_toBottomOf="@+id/tv_skin_bg"
        app:layout_constraintLeft_toLeftOf="@+id/tv_skin_bg"/>
    <ImageView
        android:id="@+id/image_skin_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/qc_dp_10"
        android:layout_marginBottom="@dimen/qc_dp_10"
        app:layout_constraintBottom_toBottomOf="@+id/tv_skin_bg"
        app:layout_constraintRight_toRightOf="@+id/tv_skin_bg"/>
</androidx.constraintlayout.widget.ConstraintLayout>
