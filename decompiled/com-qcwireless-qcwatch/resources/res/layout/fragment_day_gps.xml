<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:descendantFocusability="blocksDescendants"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/qc_dp_26"
        android:layout_marginRight="@dimen/qc_dp_26">
        <com.qcwireless.qcwatch.ui.base.view.QDateSwitchView
            android:id="@+id/qc_date_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="@dimen/qc_sp_60"
            android:textStyle="bold"
            android:textColor="@color/gps_total_time"
            android:id="@+id/today_total_during"
            android:paddingRight="@dimen/qc_dp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qc_date_change"/>
        <com.qcwireless.qcwatch.ui.base.view.QSportItemView
            android:id="@+id/total_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/today_total_during"
            app:q_item_textSize="22"
            app:q_item_title="00"
            app:q_item_unit="@string/qc_text_88"/>
        <com.qcwireless.qcwatch.ui.base.view.QSportItemView
            android:id="@+id/total_cal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qc_dp_40"
            app:layout_constraintLeft_toRightOf="@+id/total_distance"
            app:layout_constraintTop_toBottomOf="@+id/today_total_during"
            app:q_item_textSize="22"
            app:q_item_title="00"
            app:q_item_unit="@string/qc_text_110"/>
        <com.qcwireless.qcwatch.ui.base.view.QSportItemView
            android:id="@+id/total_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qc_dp_40"
            app:layout_constraintLeft_toRightOf="@+id/total_cal"
            app:layout_constraintTop_toBottomOf="@+id/today_total_during"
            app:q_item_textSize="22"
            app:q_item_title="00"
            app:q_item_unit="@string/qc_text_109"/>
        <TextView
            android:textSize="@dimen/qc_dp_18"
            android:textColor="@color/gps_item_title"
            android:id="@+id/tv_recent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qc_dp_15"
            android:text="@string/qc_text_112"
            android:drawablePadding="@dimen/qc_dp_10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/total_cal"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/gps_detail_rcv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            app:layout_constraintTop_toBottomOf="@+id/tv_recent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
