<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color_F9F9F9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/titleBar"
        layout="@layout/layout_title_bar"/>
    <com.qcwireless.qcwatch.ui.base.view.QSettingItem
        android:id="@+id/qc_setting_disturb_manual"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qc_dp_22"
        android:layout_marginRight="@dimen/qc_dp_22"
        android:minHeight="@dimen/qc_dp_54"
        app:LtextColor="@color/profile_common_1"
        app:isShowRightText="true"
        app:leftText="@string/qc_text_568"
        app:rightStyle="iconShow"
        app:rightText=""
        app:rightTextColor="@color/device_setting_common_2"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/qc_dp_22"
        android:layout_marginRight="@dimen/qc_dp_22">
        <com.qcwireless.qcwatch.ui.base.view.QSettingItemWithClick
            android:id="@+id/qc_disturb_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/qc_dp_54"
            app:LtextColor="@color/device_setting_common_1"
            app:isShowRightText="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:leftText="@string/qc_text_13"
            app:rightStyle="iconSwitch"
            app:rightText=""
            app:rightTextColor="@color/device_setting_common_2"/>
        <View
            android:id="@+id/line_1"
            android:background="@color/device_setting_line_1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qc_disturb_switch"/>
        <androidx.constraintlayout.widget.Group
            android:id="@+id/disturb_group"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="qc_disturb_start,qc_disturb_end,tv_disturb"/>
        <com.qcwireless.qcwatch.ui.base.view.QSettingItem
            android:id="@+id/qc_disturb_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/qc_dp_54"
            app:LtextColor="@color/device_setting_common_1"
            app:isShowRightText="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line_1"
            app:leftText="@string/qc_text_39"
            app:rightStyle="iconShow"
            app:rightText="23:00"
            app:rightTextColor="@color/device_setting_common_2"/>
        <com.qcwireless.qcwatch.ui.base.view.QSettingItem
            android:id="@+id/qc_disturb_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/qc_dp_54"
            app:LtextColor="@color/device_setting_common_1"
            app:isShowRightText="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qc_disturb_start"
            app:leftText="@string/qc_text_40"
            app:rightStyle="iconShow"
            app:rightText="07:00"
            app:rightTextColor="@color/device_setting_common_2"/>
        <TextView
            android:textSize="@dimen/qc_sp_14"
            android:textColor="@color/device_setting_common_2"
            android:gravity="center"
            android:id="@+id/tv_disturb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qc_dp_20"
            android:text="@string/qc_text_290"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qc_disturb_end"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
