<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_F9F9F9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:background="@drawable/bg_gradient_bp_270"
        android:layout_width="match_parent"
        android:layout_height="333dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <include
        android:id="@+id/title_bar"
        layout="@layout/layout_title_bar"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_bar">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.qcwireless.qcwatch.ui.base.view.QDateSwitchView
                android:id="@+id/qc_date_change"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="@dimen/qc_sp_14"
                android:textColor="@color/blood_pressure_common_1"
                android:id="@+id/tv_h_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/qc_date_change"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/layout_1"
                android:background="@drawable/bg_rect_ffffff_corner_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qc_dp_26"
                android:layout_marginTop="@dimen/qc_dp_10"
                android:layout_marginRight="@dimen/qc_dp_26"
                android:layout_marginBottom="@dimen/qc_dp_10"
                app:layout_constraintTop_toBottomOf="@+id/tv_h_m">
                <com.qcwireless.qcwatch.ui.base.view.QSettingItemTitleSubTitleSystem
                    android:id="@+id/qc_setting_blood_pressure"
                    android:padding="@dimen/qc_dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/qc_dp_54"
                    app:LtextColor="@color/device_setting_common_1"
                    app:isShowRightText="true"
                    app:isShowSubTitle="true"
                    app:layout_constraintTop_toBottomOf="@+id/tv_h_m"
                    app:leftSubText="@string/qc_text_481"
                    app:leftText="@string/qc_text_501"
                    app:rightStyle="iconSwitch"
                    app:rightText=""/>
            </LinearLayout>
            <TextView
                android:id="@+id/top_bg_1"
                android:background="@drawable/bg_rect_ffffff_corner_12"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="@dimen/qc_dp_26"
                android:layout_marginTop="@dimen/qc_dp_10"
                android:layout_marginRight="@dimen/qc_dp_26"
                app:layout_constraintTop_toBottomOf="@+id/layout_1"/>
            <TextView
                android:textSize="@dimen/qc_sp_40"
                android:textColor="@color/blood_pressure_curr_value"
                android:gravity="center"
                android:id="@+id/bp_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qc_dp_10"
                android:text="--"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_1"/>
            <TextView
                android:textSize="@dimen/qc_sp_14"
                android:textColor="@color/blood_pressure_common_1"
                android:paddingBottom="@dimen/qc_dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mmHg"
                app:layout_constraintBottom_toBottomOf="@+id/bp_value"
                app:layout_constraintLeft_toRightOf="@+id/bp_value"/>
            <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:id="@+id/guide_1"
                android:layout_width="1dp"
                android:layout_height="1dp"
                app:layout_constraintGuide_percent="0.5"
                app:layout_constraintTop_toBottomOf="@+id/bp_value"/>
            <TextView
                android:textSize="@dimen/qc_sp_14"
                android:textColor="@color/blood_pressure_common_1"
                android:ellipsize="marquee"
                android:id="@+id/tv_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qc_dp_20"
                android:layout_marginTop="@dimen/qc_dp_10"
                android:maxWidth="@dimen/qc_dp_150"
                android:text="@string/qc_text_307"
                android:drawableLeft="@mipmap/deep_sleep_icon"
                android:drawablePadding="@dimen/qc_dp_5"
                app:layout_constraintLeft_toRightOf="@+id/guide_1"
                app:layout_constraintTop_toBottomOf="@+id/bp_value"/>
            <TextView
                android:textSize="@dimen/qc_sp_14"
                android:textColor="@color/blood_pressure_common_1"
                android:ellipsize="marquee"
                android:id="@+id/tv_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qc_dp_20"
                android:layout_marginTop="@dimen/qc_dp_10"
                android:maxWidth="@dimen/qc_dp_150"
                android:text="@string/qc_text_306"
                android:drawableLeft="@mipmap/awake_sleep_icon"
                android:drawablePadding="@dimen/qc_dp_5"
                app:layout_constraintRight_toLeftOf="@+id/guide_1"
                app:layout_constraintTop_toBottomOf="@+id/bp_value"/>
            <com.qcwireless.qcwatch.ui.base.view.QBloodPressureChartView
                android:id="@+id/blood_pressure_chat_view"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginLeft="@dimen/qc_dp_26"
                android:layout_marginRight="@dimen/qc_dp_26"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_text_2"
                app:qc_bottom_offset="50"
                app:qc_color_ball="@color/q_view_common_4"
                app:qc_color_bg_selected="@color/color_FFFFFF"
                app:qc_color_line="@color/color_FF6A00"
                app:qc_color_value="@android:color/white"
                app:qc_color_value_selected="@color/q_view_blood_pressure_1"
                app:qc_line_height="200"
                app:qc_text_down_value="@color/q_view_common_1"
                app:qc_unit=""/>
            <LinearLayout
                android:id="@+id/detail_layout"
                android:background="@drawable/bg_rect_ffffff_corner_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qc_dp_26"
                android:layout_marginTop="@dimen/qc_dp_12"
                android:layout_marginRight="@dimen/qc_dp_26"
                app:layout_constraintTop_toBottomOf="@+id/blood_pressure_chat_view">
                <com.qcwireless.qcwatch.ui.base.view.QSettingItem
                    android:id="@+id/bp_value_detail"
                    android:paddingRight="@dimen/qc_dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/qc_dp_54"
                    app:LtextColor="@color/device_setting_common_1"
                    app:isShowRightText="true"
                    app:leftText="@string/qc_text_480"
                    app:rightStyle="iconShow"
                    app:rightText=""
                    app:rightTextColor="@color/device_setting_common_2"/>
            </LinearLayout>
            <TextView
                android:textSize="@dimen/qc_sp_14"
                android:textColor="@color/blood_pressure_common_1"
                android:id="@+id/tv_info_2"
                android:background="@drawable/bg_rect_ffffff_corner_12"
                android:padding="@dimen/qc_dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qc_dp_10"
                android:layout_marginRight="@dimen/qc_dp_26"
                android:text="@string/qc_text_308"
                android:layout_marginStart="@dimen/qc_dp_26"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail_layout"/>
            <TextView
                android:textSize="@dimen/qc_sp_14"
                android:textColor="@color/blood_pressure_common_1"
                android:id="@+id/tv_info_1"
                android:background="@drawable/bg_rect_ffffff_corner_12"
                android:padding="@dimen/qc_dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qc_dp_10"
                android:layout_marginRight="@dimen/qc_dp_26"
                android:text="@string/qc_text_305"
                android:layout_marginStart="@dimen/qc_dp_26"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_info_2"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
