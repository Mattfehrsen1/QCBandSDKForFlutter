<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/titleBar"
        layout="@layout/layout_title_bar"/>
    <TextView
        android:textSize="@dimen/qc_sp_24"
        android:textColor="@color/music_common_1"
        android:gravity="center"
        android:id="@+id/tv_file_name"
        android:paddingLeft="@dimen/qc_dp_20"
        android:paddingRight="@dimen/qc_dp_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qc_dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleBar"/>
    <TextView
        android:textSize="@dimen/qc_sp_18"
        android:textColor="@color/music_common_1"
        android:gravity="left"
        android:id="@+id/tv_file_sync"
        android:paddingLeft="@dimen/qc_dp_20"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qc_dp_10"
        app:layout_constraintLeft_toLeftOf="@+id/tv_file_name"
        app:layout_constraintRight_toRightOf="@+id/tv_file_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_file_name"/>
    <TextView
        android:textSize="@dimen/qc_sp_40"
        android:textColor="@color/music_common_1"
        android:id="@+id/tv_file_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qc_dp_10"
        android:layout_marginBottom="@dimen/qc_dp_30"
        app:layout_constraintBottom_toTopOf="@+id/image_start"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <ImageView
        android:id="@+id/image_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
