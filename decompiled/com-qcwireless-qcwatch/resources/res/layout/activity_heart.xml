<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_F9F9F9"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/color_F9F9F9"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:background="@drawable/bg_gradient_heart_270"
            android:layout_width="match_parent"
            android:layout_height="333dp"
            app:layout_constraintTop_toTopOf="parent"/>
        <include
            android:id="@+id/title_bar"
            layout="@layout/layout_title_bar"/>
        <com.qcwireless.qcwatch.ui.base.view.QDateSwitchView
            android:id="@+id/qc_date_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/title_bar"/>
        <TextView
            android:textSize="@dimen/qc_sp_14"
            android:textColor="@color/heart_select_time"
            android:id="@+id/tv_h_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qc_date_change"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layout_1"
            android:background="@drawable/bg_rect_ffffff_corner_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qc_dp_26"
            android:layout_marginTop="@dimen/qc_dp_10"
            android:layout_marginRight="@dimen/qc_dp_26"
            android:layout_marginBottom="@dimen/qc_dp_10"
            app:layout_constraintTop_toBottomOf="@+id/tv_h_m">
            <com.qcwireless.qcwatch.ui.base.view.QSettingItemTitleSubTitleSystem
                android:id="@+id/qc_setting_heart"
                android:padding="@dimen/qc_dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/qc_dp_54"
                app:LtextColor="@color/heart_common_1"
                app:isShowRightText="true"
                app:isShowSubTitle="true"
                app:leftSubText="@string/qc_text_502"
                app:leftText="@string/qc_text_80"
                app:rightStyle="iconSwitch"
                app:rightText=""/>
        </LinearLayout>
        <TextView
            android:id="@+id/top_bg_1"
            android:background="@drawable/bg_rect_ffffff_corner_12"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="@dimen/qc_dp_26"
            android:layout_marginTop="@dimen/qc_dp_10"
            android:layout_marginRight="@dimen/qc_dp_26"
            app:layout_constraintTop_toBottomOf="@+id/layout_1"/>
        <TextView
            android:textSize="@dimen/qc_sp_50"
            android:textColor="@color/heart_value"
            android:gravity="bottom"
            android:id="@+id/tv_heart_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qc_dp_15"
            android:text="--"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_1"/>
        <TextView
            android:textSize="@dimen/qc_sp_14"
            android:textColor="@color/heart_value_unit"
            android:paddingBottom="@dimen/qc_dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bpm"
            app:layout_constraintBottom_toBottomOf="@+id/tv_heart_value"
            app:layout_constraintLeft_toRightOf="@+id/tv_heart_value"/>
        <com.qcwireless.qcwatch.ui.base.view.QHeartLineChartView
            android:id="@+id/heart_chat_view"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginLeft="@dimen/qc_dp_26"
            android:layout_marginRight="@dimen/qc_dp_26"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_heart_value"
            app:qc_bottom_offset="50"
            app:qc_color_ball="@color/q_view_common_4"
            app:qc_color_bg_selected="@color/color_FFFFFF"
            app:qc_color_line="@color/color_FF6A00"
            app:qc_color_value="@android:color/white"
            app:qc_color_value_selected="@color/q_view_heart_1"
            app:qc_line_height="200"
            app:qc_text_down_value="@color/q_view_common_1"
            app:qc_unit=""/>
        <LinearLayout
            android:id="@+id/detail_layout"
            android:background="@drawable/bg_rect_ffffff_corner_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qc_dp_26"
            android:layout_marginTop="@dimen/qc_dp_12"
            android:layout_marginRight="@dimen/qc_dp_26"
            app:layout_constraintTop_toBottomOf="@+id/heart_chat_view">
            <com.qcwireless.qcwatch.ui.base.view.QSettingItem
                android:id="@+id/heart_value_detail"
                android:paddingRight="@dimen/qc_dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/qc_dp_54"
                app:LtextColor="@color/device_setting_common_1"
                app:isShowRightText="true"
                app:leftText="@string/qc_text_480"
                app:rightStyle="iconShow"
                app:rightText=""
                app:rightTextColor="@color/device_setting_common_2"/>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/curr_heart_ctl"
            android:background="@drawable/bg_rect_ffffff_corner_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qc_dp_26"
            android:layout_marginTop="@dimen/qc_dp_12"
            android:layout_marginRight="@dimen/qc_dp_26"
            app:layout_constraintTop_toBottomOf="@+id/detail_layout">
            <TextView
                android:textColor="@color/heart_common_1"
                android:gravity="left"
                android:padding="@dimen/qc_dp_15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/qc_text_384"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/iamge_heart"
                app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                android:id="@+id/iamge_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/chart_heart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/tv_curr_heart"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="@dimen/qc_sp_18"
                android:textColor="@color/heart_common_1"
                android:gravity="center"
                android:id="@+id/tv_curr_heart"
                android:padding="@dimen/qc_dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/qc_dp_10"
                android:minWidth="@dimen/qc_dp_40"
                android:text="--"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/csl_heart_pie"
            android:background="@drawable/bg_rect_ffffff_corner_12"
            android:paddingBottom="@dimen/qc_dp_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qc_dp_26"
            android:layout_marginTop="@dimen/qc_dp_12"
            android:layout_marginRight="@dimen/qc_dp_26"
            app:layout_constraintTop_toBottomOf="@+id/curr_heart_ctl">
            <com.qcwireless.qcwatch.ui.base.view.QCirclePieView
                android:id="@+id/heart_circle_view"
                android:layout_width="110dp"
                android:layout_height="160dp"
                android:layout_marginTop="@dimen/qc_dp_20"
                android:layout_marginBottom="@dimen/qc_dp_20"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="@dimen/qc_sp_12"
                android:textColor="@color/heart_sport_title"
                android:ellipsize="marquee"
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qc_dp_20"
                android:layout_marginBottom="@dimen/qc_dp_22"
                android:maxWidth="@dimen/qc_dp_120"
                android:text="@string/qc_text_95"
                android:drawableLeft="@mipmap/circle_1"
                android:drawablePadding="@dimen/qc_dp_6"
                app:layout_constraintBottom_toTopOf="@+id/tv_2"
                app:layout_constraintLeft_toRightOf="@+id/heart_circle_view"/>
            <TextView
                android:textSize="@dimen/qc_sp_12"
                android:textColor="@color/heart_sport_title"
                android:ellipsize="marquee"
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qc_dp_20"
                android:layout_marginBottom="@dimen/qc_dp_22"
                android:maxWidth="@dimen/qc_dp_120"
                android:text="@string/qc_text_96"
                android:drawableLeft="@mipmap/circle_2"
                android:drawablePadding="@dimen/qc_dp_6"
                app:layout_constraintBottom_toTopOf="@+id/tv_3"
                app:layout_constraintLeft_toRightOf="@+id/heart_circle_view"/>
            <TextView
                android:textSize="@dimen/qc_sp_12"
                android:textColor="@color/heart_sport_title"
                android:ellipsize="marquee"
                android:id="@+id/tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qc_dp_20"
                android:maxWidth="@dimen/qc_dp_120"
                android:text="@string/qc_text_97"
                android:drawableLeft="@mipmap/circle_3"
                android:drawablePadding="@dimen/qc_dp_6"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/heart_circle_view"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="@dimen/qc_sp_12"
                android:textColor="@color/heart_sport_title"
                android:ellipsize="marquee"
                android:id="@+id/tv_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qc_dp_20"
                android:layout_marginTop="@dimen/qc_dp_22"
                android:maxWidth="@dimen/qc_dp_120"
                android:text="@string/qc_text_98"
                android:drawableLeft="@mipmap/circle_4"
                android:drawablePadding="@dimen/qc_dp_6"
                app:layout_constraintLeft_toRightOf="@+id/heart_circle_view"
                app:layout_constraintTop_toBottomOf="@+id/tv_3"/>
            <TextView
                android:textSize="@dimen/qc_sp_12"
                android:textColor="@color/heart_sport_title"
                android:ellipsize="marquee"
                android:id="@+id/tv_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qc_dp_20"
                android:layout_marginTop="@dimen/qc_dp_22"
                android:maxWidth="@dimen/qc_dp_120"
                android:text="@string/qc_text_99"
                android:drawableLeft="@mipmap/circle_5"
                android:drawablePadding="@dimen/qc_dp_6"
                app:layout_constraintLeft_toRightOf="@+id/heart_circle_view"
                app:layout_constraintTop_toBottomOf="@+id/tv_4"/>
            <TextView
                android:textSize="@dimen/qc_sp_12"
                android:textColor="@color/heart_sport_value"
                android:id="@+id/tv_value_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/qc_dp_26"
                app:layout_constraintBottom_toBottomOf="@+id/tv_1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_1"/>
            <TextView
                android:textSize="@dimen/qc_sp_12"
                android:textColor="@color/heart_sport_value"
                android:id="@+id/tv_value_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/qc_dp_26"
                app:layout_constraintBottom_toBottomOf="@+id/tv_2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_2"/>
            <TextView
                android:textSize="@dimen/qc_sp_12"
                android:textColor="@color/heart_sport_value"
                android:id="@+id/tv_value_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/qc_dp_26"
                app:layout_constraintBottom_toBottomOf="@+id/tv_3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_3"/>
            <TextView
                android:textSize="@dimen/qc_sp_12"
                android:textColor="@color/heart_sport_value"
                android:id="@+id/tv_value_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/qc_dp_26"
                app:layout_constraintBottom_toBottomOf="@+id/tv_4"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_4"/>
            <TextView
                android:textSize="@dimen/qc_sp_12"
                android:textColor="@color/heart_sport_value"
                android:id="@+id/tv_value_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/qc_dp_26"
                android:text="min"
                app:layout_constraintBottom_toBottomOf="@+id/tv_5"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_5"/>
            <TextView
                android:textSize="@dimen/qc_sp_12"
                android:textColor="@color/heart_range_6"
                android:id="@+id/tv_desc"
                android:paddingTop="@dimen/qc_dp_10"
                android:paddingBottom="@dimen/qc_dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qc_dp_10"
                android:layout_marginRight="@dimen/qc_dp_26"
                android:text="@string/qc_text_498"
                android:drawableRight="@mipmap/heart_right_warming_icon"
                android:drawablePadding="@dimen/qc_dp_5"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_value_5"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/csl_info_view"
            android:paddingBottom="@dimen/qc_dp_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qc_dp_26"
            android:layout_marginTop="@dimen/qc_dp_12"
            android:layout_marginRight="@dimen/qc_dp_26"
            android:layout_marginBottom="@dimen/qc_dp_12"
            app:layout_constraintTop_toBottomOf="@+id/csl_heart_pie">
            <TextView
                android:textSize="@dimen/qc_sp_14"
                android:textColor="@color/blood_oxygen_common_1"
                android:id="@+id/tv_info_1"
                android:background="@drawable/bg_rect_ffffff_corner_12"
                android:padding="@dimen/qc_sp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/qc_sp_10"
                android:text="@string/qc_text_471"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
