<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_F9F9F9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/title_bar"
        layout="@layout/layout_title_bar"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/qc_dp_26"
        android:layout_marginRight="@dimen/qc_dp_26"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_bar"
        app:layout_constraintVertical_bias="1">
        <TextView
            android:textSize="@dimen/qc_sp_14"
            android:textColor="@color/forget_pwd_error_info"
            android:id="@+id/tv_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qc_dp_10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="@dimen/qc_sp_12"
            android:textColor="@color/forget_pwd_common_1"
            android:id="@+id/tv_email_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qc_dp_10"
            android:text="@string/qc_text_156"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_error"/>
        <EditText
            android:theme="@style/MyEditText"
            android:textColor="@color/forget_pwd_common_1"
            android:textColorHint="@color/forget_pwd_edit_hint"
            android:id="@+id/user_email"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="@string/qc_text_162"
            android:textCursorDrawable="@drawable/edit_view_cursor"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_email_title"/>
        <View
            android:background="@color/forget_pwd_common_3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/user_email"/>
        <TextView
            android:textSize="@dimen/qc_sp_12"
            android:textColor="@color/forget_pwd_common_1"
            android:id="@+id/tv_verify_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qc_dp_15"
            android:text="@string/qc_text_173"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_email"/>
        <EditText
            android:theme="@style/MyEditText"
            android:textColor="@color/forget_pwd_common_1"
            android:textColorHint="@color/forget_pwd_edit_hint"
            android:id="@+id/et_verify_code"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:maxWidth="@dimen/qc_dp_300"
            android:minWidth="@dimen/qc_dp_200"
            android:hint="@string/qc_text_176"
            android:maxLength="10"
            android:textCursorDrawable="@drawable/edit_view_cursor"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_verify_code"/>
        <View
            android:background="@color/forget_pwd_common_3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/et_verify_code"/>
        <TextView
            android:textSize="@dimen/qc_sp_14"
            android:textColor="@color/forget_pwd_common_3"
            android:gravity="center"
            android:id="@+id/send_code"
            android:background="@drawable/bg_rect_corner_8_stroke"
            android:padding="@dimen/qc_dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/qc_dp_5"
            android:minWidth="@dimen/qc_dp_48"
            android:text="@string/qc_text_174"
            app:layout_constraintBottom_toBottomOf="@+id/et_verify_code"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/et_verify_code"/>
        <TextView
            android:textSize="@dimen/qc_sp_12"
            android:textColor="@color/forget_pwd_common_1"
            android:id="@+id/tv_pwd_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qc_dp_26"
            android:text="@string/qc_text_175"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_verify_code"/>
        <EditText
            android:theme="@style/MyEditText"
            android:textColor="@color/forget_pwd_common_1"
            android:textColorHint="@color/forget_pwd_edit_hint"
            android:id="@+id/user_pwd_new"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:maxWidth="@dimen/qc_dp_350"
            android:minWidth="@dimen/qc_dp_300"
            android:hint="@string/qc_text_177"
            android:inputType="textPassword"
            android:textCursorDrawable="@drawable/edit_view_cursor"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_pwd_new"/>
        <View
            android:background="@color/forget_pwd_common_3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/user_pwd_new"/>
        <CheckBox
            android:id="@+id/img_pwd_new"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:checked="false"
            android:button="@drawable/sel_pwd_eye"
            app:layout_constraintBottom_toBottomOf="@+id/user_pwd_new"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/user_pwd_new"/>
        <TextView
            android:textSize="@dimen/qc_sp_12"
            android:textColor="@color/forget_pwd_common_1"
            android:id="@+id/tv_pwd_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qc_dp_26"
            android:text="@string/qc_text_175"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_pwd_new"/>
        <EditText
            android:theme="@style/MyEditText"
            android:textColor="@color/forget_pwd_common_1"
            android:textColorHint="@color/forget_pwd_edit_hint"
            android:id="@+id/user_pwd_confirm"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:maxWidth="@dimen/qc_dp_350"
            android:minWidth="@dimen/qc_dp_300"
            android:hint="@string/qc_text_178"
            android:inputType="textPassword"
            android:textCursorDrawable="@drawable/edit_view_cursor"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_pwd_confirm"/>
        <View
            android:background="@color/forget_pwd_common_3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/user_pwd_confirm"/>
        <CheckBox
            android:id="@+id/img_pwd_confirm"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:checked="false"
            android:button="@drawable/sel_pwd_eye"
            app:layout_constraintBottom_toBottomOf="@+id/user_pwd_confirm"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/user_pwd_confirm"/>
        <Button
            android:textColor="@color/forget_pwd_btn_text"
            android:id="@+id/btn_confirm"
            android:background="@drawable/sel_btn_user_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qc_dp_80"
            android:minHeight="@dimen/qc_dp_48"
            android:text="@string/qc_text_46"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_pwd_confirm"
            app:textAllCaps="false"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
