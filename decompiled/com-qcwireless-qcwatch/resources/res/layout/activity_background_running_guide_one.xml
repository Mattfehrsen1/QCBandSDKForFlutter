<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_F9F9F9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/title_bar"
        layout="@layout/layout_title_bar"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_bar">
        <TextView
            android:textSize="@dimen/qc_dp_20"
            android:textColor="@color/app_bg_run_common_1"
            android:gravity="center"
            android:id="@+id/tv_text_1"
            android:paddingLeft="@dimen/qc_dp_10"
            android:paddingRight="@dimen/qc_dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/qc_text_394"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/app_bg_run_common_1"
            android:gravity="center"
            android:id="@+id/tv_text_2"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/qc_text_395"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_text_1"/>
        <ImageView
            android:id="@+id/icon_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:src="@mipmap/bg_sms"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_text_2"/>
        <TextView
            android:textSize="@dimen/qc_sp_14"
            android:textColor="@color/app_bg_run_common_1"
            android:id="@+id/tv_text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:maxWidth="220dp"
            android:text="@string/qc_text_396"
            app:layout_constraintBottom_toBottomOf="@+id/icon_1"
            app:layout_constraintLeft_toRightOf="@+id/icon_1"
            app:layout_constraintTop_toTopOf="@+id/icon_1"/>
        <ImageView
            android:id="@+id/icon_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:src="@mipmap/bg_call"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_text_3"/>
        <TextView
            android:textSize="@dimen/qc_sp_14"
            android:textColor="@color/app_bg_run_common_1"
            android:id="@+id/tv_text_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:maxWidth="220dp"
            android:text="@string/qc_text_397"
            app:layout_constraintBottom_toBottomOf="@+id/icon_2"
            app:layout_constraintLeft_toRightOf="@+id/icon_2"
            app:layout_constraintTop_toTopOf="@+id/icon_2"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/color_FFFFFF"
            android:gravity="center"
            android:id="@+id/tv_go_setting"
            android:background="@drawable/sel_btn_user_center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="250dp"
            android:layout_height="@dimen/qc_dp_48"
            android:layout_marginBottom="@dimen/qc_dp_60"
            android:text="@string/qc_text_398"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
