<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="8dp">
    <com.stfalcon.chatkit.utils.ShapeImageView
        android:id="@+id/messageUserAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="8dp"/>
    <com.google.android.flexbox.FlexboxLayout
        android:orientation="vertical"
        android:id="@+id/bubble_2"
        android:background="@drawable/bg_rect_ffffff_corner_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/message_incoming_bubble_margin_right"
        android:layout_toRightOf="@+id/messageUserAvatar"
        android:layout_marginEnd="@dimen/message_incoming_bubble_margin_right"
        android:layout_toEndOf="@+id/messageUserAvatar"
        app:alignContent="stretch"
        app:alignItems="stretch"
        app:flexDirection="column"
        app:flexWrap="wrap"
        app:justifyContent="flex_end">
        <TextView
            android:textSize="20sp"
            android:id="@+id/qudao_messageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="18sp"
            android:id="@+id/qudao_messageText_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/messageText"/>
        <TextView
            android:textSize="18sp"
            android:id="@+id/qudao_messageText_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/qudao_messageText_1"/>
        <TextView
            android:textSize="18sp"
            android:id="@+id/qudao_messageText_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/qudao_messageText_2"/>
        <TextView
            android:textSize="18sp"
            android:id="@+id/qudao_toCs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/messageText_4"/>
        <TextView
            android:id="@+id/messageTime"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/toCs"
            android:layout_marginStart="8dp"
            app:layout_alignSelf="center"/>
    </com.google.android.flexbox.FlexboxLayout>
</RelativeLayout>
