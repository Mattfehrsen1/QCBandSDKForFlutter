<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_F9F9F9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/qc_dp_10">
        <TextView
            android:textSize="@dimen/qc_sp_12"
            android:textColor="@color/watch_face_common_2"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:text="@string/qc_text_167"
            android:paddingStart="@dimen/qc_dp_30"
            android:paddingEnd="@dimen/qc_dp_30"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_local_view"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/qc_dp_80"/>
        <TextView
            android:textSize="@dimen/qc_sp_12"
            android:textColor="@color/watch_face_common_2"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qc_dp_15"
            android:layout_marginBottom="@dimen/qc_dp_10"
            android:text="@string/qc_text_168"
            android:paddingStart="@dimen/qc_dp_30"
            android:paddingEnd="@dimen/qc_dp_30"/>
        <RelativeLayout
            android:descendantFocusability="blocksDescendants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.qcwireless.qcwatch.ui.base.view.MyRecycleView
                android:id="@+id/rcv_network_view"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="300dp"/>
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
