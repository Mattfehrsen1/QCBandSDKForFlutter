<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_rect_ffffff_corner_12"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/qc_dp_6"
    android:maxHeight="@dimen/qc_dp_220"
    android:minHeight="@dimen/qc_dp_150">
    <TextView
        android:textSize="@dimen/qc_sp_16"
        android:textColor="@color/rcv_item_sport_title"
        android:id="@+id/home_step_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qc_dp_8"
        android:layout_marginTop="@dimen/qc_dp_18"
        android:text="@string/qc_text_83"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/qc_sp_14"
        android:textColor="@color/rcv_item_sport_date"
        android:id="@+id/home_step_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qc_dp_8"
        android:layout_marginTop="@dimen/qc_dp_6"
        android:text=""
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_step_title"/>
    <ImageView
        android:id="@+id/image_run"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_sport"
        app:layout_constraintBottom_toTopOf="@+id/home_step_distance"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_step_date"/>
    <TextView
        android:textSize="@dimen/qc_sp_30"
        android:textStyle="bold"
        android:textColor="@color/rcv_item_sport_value"
        android:id="@+id/home_step_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qc_dp_8"
        android:layout_marginTop="@dimen/qc_dp_6"
        android:layout_marginBottom="@dimen/qc_dp_18"
        android:text="--"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:textSize="@dimen/qc_sp_12"
        android:textStyle="bold"
        android:textColor="@color/rcv_item_sport_unit"
        android:id="@+id/home_step_distance_unit"
        android:paddingBottom="@dimen/qc_dp_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qc_dp_8"
        android:layout_marginTop="@dimen/qc_dp_6"
        android:layout_marginBottom="@dimen/qc_dp_18"
        android:text="@string/qc_text_88"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/home_step_distance"/>
    <ImageView
        android:id="@+id/image_no_data"
        android:visibility="gone"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@mipmap/no_data_sport"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:enabled="true"
        android:textColor="@color/healthy_curr_step_text"
        android:id="@+id/btn_sport_go"
        android:background="@drawable/bg_rect_ffffff_corner_12_step"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/qc_dp_30"
        android:layout_marginTop="@dimen/qc_dp_20"
        android:layout_marginRight="@dimen/qc_dp_15"
        android:layout_marginBottom="@dimen/qc_dp_20"
        android:minHeight="@dimen/qc_dp_36"
        android:text="@string/qc_text_6666039"
        app:layout_constraintBottom_toTopOf="@+id/home_step_distance"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_step_date"
        app:textAllCaps="false"/>
</androidx.constraintlayout.widget.ConstraintLayout>
