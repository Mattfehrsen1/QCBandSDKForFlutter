<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_rect_ffffff_corner_12"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/qc_dp_6"
    android:maxHeight="@dimen/qc_dp_220"
    android:minHeight="@dimen/qc_dp_150">
    <TextView
        android:textSize="@dimen/qc_sp_16"
        android:textColor="@color/rcv_item_menstruation_title"
        android:id="@+id/home_bo_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qc_dp_8"
        android:layout_marginTop="@dimen/qc_dp_18"
        android:text="@string/qc_text_94"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/qc_sp_14"
        android:textColor="@color/rcv_item_menstruation_date"
        android:id="@+id/home_bo_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qc_dp_8"
        android:layout_marginTop="@dimen/qc_dp_6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_bo_title"/>
    <com.qcwireless.qcwatch.ui.base.view.QHomeMenstruationView
        android:id="@+id/qms_view"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/qc_dp_6"
        android:layout_marginTop="@dimen/qc_dp_6"
        android:layout_marginRight="@dimen/qc_dp_6"
        app:layout_constraintTop_toBottomOf="@+id/home_bo_date"/>
    <TextView
        android:textSize="@dimen/qc_sp_14"
        android:textStyle="bold"
        android:textColor="@color/rcv_item_menstruation_unit"
        android:id="@+id/home_bo_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qc_dp_8"
        android:layout_marginTop="@dimen/qc_dp_6"
        android:text="@string/qc_text_232"
        app:layout_constraintBottom_toTopOf="@+id/home_bo_unit"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:textSize="@dimen/qc_sp_14"
        android:textStyle="bold"
        android:textColor="@color/rcv_item_menstruation_value"
        android:id="@+id/home_bo_unit"
        android:paddingBottom="@dimen/qc_dp_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qc_dp_8"
        android:layout_marginTop="@dimen/qc_dp_6"
        android:layout_marginRight="@dimen/qc_dp_8"
        android:layout_marginBottom="@dimen/qc_dp_18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageView
        android:id="@+id/image_no_data"
        android:visibility="gone"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@mipmap/no_data_menstruation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
